{
  "name": "pytest-html-plus-vscode",
  "displayName": "Pytest HTML Plus",
  "version": "0.1.0",
  "publisher": "reporterplus",
  "categories": ["Testing"],
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/reporterplus/pytest-html-plus-vscode"
  },
  "description": "Show failed pytest tests in a VS Code sidebar and jump directly to failure locations.",
  "engines": {
    "vscode": "^1.80.0"
  },
 "activationEvents": [
  "onView:reporterplus.sidebar",
  "onCommand:reporterplus.configureReportPath"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
    "command": "reporterplus.configureReportPath",
    "title": "ReporterPlus: Configure Report Path"
  },
  {
  "command": "reporterplus.refresh",
  "title": "ReporterPlus: Refresh"
}

    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "reporterplus",
          "title": "ReporterPlus",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
  "reporterplus": [
    {
      "id": "reporterplus.sidebar",
      "name": "Failed Tests",
      "type": "webview"
    }
  ]
},
    "configuration": {
      "properties": {
        "reporterplus.reportJsonPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to final-report.json"
        },
        "reporterplus.reportHtmlPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to ReporterPlus HTML report"
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.18.0",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -watch -p ."
  }
}
